<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="329.0" prefWidth="527.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.luassegitiga_javafx.SegitigaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <GridPane prefHeight="455.0" prefWidth="487.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="305.0" minWidth="10.0" prefWidth="246.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="248.0" minWidth="10.0" prefWidth="241.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="60.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="60.0" minHeight="0.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="60.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label alignment="CENTER" prefHeight="46.0" prefWidth="241.0" text="Luas Segitiga">
                <font>
                    <Font size="31.0" />
                </font></Label>
            <Label text="Alas" GridPane.rowIndex="1">
                <font>
                    <Font size="18.0" />
                </font></Label>
            <Label text="Tinggi" GridPane.rowIndex="2">
                <font>
                    <Font size="18.0" />
                </font></Label>
            <TextField fx:id="txtAlas" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="txtTinggi" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                <children>
                    <Button fx:id="btnLuas" mnemonicParsing="false" onAction="#onLuasClick" text="Luas" />
                    <Button fx:id="btnClose" mnemonicParsing="false" onAction="#onCloseClick" text="Close" />
                </children>
            </HBox>
         <HBox prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="4">
            <children>
                  <Label prefHeight="3.0" prefWidth="63.0" text="Hasil">
                      <font>
                          <Font size="24.0" />
                      </font>
                  </Label>
               <Label fx:id="btnHasil" prefHeight="46.0" prefWidth="84.0" />
            </children>
         </HBox>
        </children>
    </GridPane>
</VBox>
